<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".views.detail.DetailActivity">

    <ImageView
        android:id="@+id/detail_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/bg_detail"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:src="@color/shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/detail_bg" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/shimmer"
        app:layout_constraintStart_toEndOf="@id/view1"
        app:layout_constraintTop_toTopOf="@id/view1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/view3"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/shimmer"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/view2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintStart_toEndOf="@id/view1">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="20dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/shimmer"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/shimmer"/>

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@color/shimmer"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/view5"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/shimmer"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/view4"
        app:layout_constraintBottom_toBottomOf="@id/view4"
        app:layout_constraintStart_toEndOf="@id/view4"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view6"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@color/shimmer"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/view4"
        app:layout_constraintEnd_toEndOf="@id/view4"
        app:layout_constraintTop_toBottomOf="@id/view4"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/view7"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/shimmer"
        app:layout_constraintTop_toTopOf="@id/view6"
        app:layout_constraintBottom_toBottomOf="@id/view6"
        app:layout_constraintStart_toEndOf="@id/view6"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view8"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@color/shimmer"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/view6"
        app:layout_constraintEnd_toEndOf="@id/view6"
        app:layout_constraintTop_toBottomOf="@id/view6"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/view9"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/shimmer"
        app:layout_constraintTop_toTopOf="@id/view8"
        app:layout_constraintBottom_toBottomOf="@id/view8"
        app:layout_constraintStart_toEndOf="@id/view8"/>

</androidx.constraintlayout.widget.ConstraintLayout>